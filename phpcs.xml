<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards for Better Code Editing">
	<description>Generally-applicable sniffs for WordPress plugins</description>

	<rule ref="WordPress-Core" />
	<rule ref="WordPress-Docs" />
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" value="easy-property-listings,default" />
		</properties>
	</rule>

	<rule ref="PHPCompatibility"/>
	<config name="testVersion" value="5.2-"/>

	<arg name="extensions" value="php" />

	<!-- Show sniff codes in all reports -->
	<arg value="s"/>

	<!-- Allow invoking just `phpcs` on command line without assuming STDIN for file input. -->
	<file>.</file>

	<rule ref="WordPress.Files.FileName.InvalidTemplateTagFileName">
		<severity>0</severity>
	</rule>

	<exclude-pattern>*/apigen/*</exclude-pattern>
	<exclude-pattern>*/epl-apidocs/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
</ruleset>